<%- include('partials/header'); -%>


<div class="page-container container">
    <h1 class="title">Compose</h1>
    <form id="newPost" class="compose" action="/compose" method="POST">
        <div class="form-group">
          <label>Title</label>
          <input type="text" class="form-control" name="title" required>
        </div>
        <div class="form-group">
          <label>Entry</label>
          <textarea class="form-control" rows="5" name="post" required></textarea>
        </div>


        <div class="form-group">
            <label>Thumbnail
            <br>
            <small>How did this make you feel?</small>
            </label>

            <div class="image-grid">
                <div class="row">
                      <div class="col-lg-4 col-md-6 mb-4">
                          <img id="gridimage-1.jpeg" src="/images/gridimage-1.jpeg" class="input img-fluid mb-4" alt=""
                            data-wow-delay="0.1s">
                      </div>
                      <div class="col-lg-4 col-md-6 mb-4">
                          <img id="gridimage-2.jpeg" src="/images/gridimage-2.jpeg" class="input img-fluid mb-4" alt=""
                            data-wow-delay="0.1s">
                      </div>
                      <div class="col-lg-4 col-md-6 mb-4">
                          <img id="gridimage-3.jpeg" src="/images/gridimage-3.jpeg" class="input img-fluid mb-4" alt=""
                            data-wow-delay="0.1s">
                      </div>

                </div>

                <div class="row">
                      <div class="col-lg-4 col-md-6 mb-4">
                          <img id="gridimage-4.jpeg" src="/images/gridimage-4.jpeg" class="input img-fluid mb-4" alt=""
                            data-wow-delay="0.1s">
                      </div>
                      <div class="col-lg-4 col-md-6 mb-4">
                          <img id="gridimage-5.jpeg" src="/images/gridimage-5.jpeg" class="input img-fluid mb-4" alt=""
                            data-wow-delay="0.1s">
                      </div>
                      <div class="col-lg-4 col-md-6 mb-4">
                          <img id="gridimage-6.jpeg" src="images/gridimage-6.jpeg" class="input img-fluid mb-4" alt=""
                            data-wow-delay="0.1s">
                      </div>

                </div>
            </div>
        </div>

        <div id="customFile" class="form-group">
          <label>Or, select your own</label>
          <div class="custom-file">
            <input type="file" class="custom-file-input" id="uploadedImage" name="uploadedImage">
            <label class="custom-file-label" for="validatedCustomFile">Choose file...</label>
          </div>
        </div>





        <input name="image" id="selectedImage" type="hidden" value="">
        <button class="btn btn-primary" type="submit" name="button">Publish</button>


    </form>
</div>



<%- include('partials/footer') -%>
